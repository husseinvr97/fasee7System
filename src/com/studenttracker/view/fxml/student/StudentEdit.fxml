<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<!--
  Student Edit Modal FXML
  
  Purpose: Edit student contact information (Admin only)
  Controller: StudentEditController
  
  Components:
  - Student name display (read-only)
  - Phone number field with validation
  - WhatsApp number field (optional)
  - Parent phone number field with validation
  - Parent WhatsApp field (optional)
  - Cancel and Save buttons
  
  Features:
  - Clean modal design (450px width)
  - Contact fields only (name/ID immutable)
  - Inline error validation
  - Consistent with registration form styling
-->

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.studenttracker.controller.student.StudentEditController"
      spacing="15.0" styleClass="edit-form"
      prefWidth="450.0">
    
    <padding>
        <Insets top="20.0" right="30.0" bottom="20.0" left="30.0"/>
    </padding>
    
    <!-- Title -->
    <Label text="Edit Student Information" styleClass="form-title">
        <font><Font name="System Bold" size="18.0"/></font>
    </Label>
    
    <Label fx:id="studentNameLabel" text="Student: محمد أحمد علي حسن" styleClass="subtitle"/>
    
    <Separator/>
    
    <!-- Form Fields -->
    <VBox spacing="15.0">
        
        <!-- Phone Number -->
        <VBox spacing="5.0">
            <Label text="Phone Number:" styleClass="field-label"/>
            <TextField fx:id="phoneField" 
                      promptText="01XXXXXXXXX"
                      styleClass="input-field"/>
            <Label fx:id="phoneErrorLabel" 
                  styleClass="error-label" 
                  visible="false" 
                  managed="false"/>
        </VBox>
        
        <!-- WhatsApp Number (Optional) -->
        <VBox spacing="5.0">
            <Label text="WhatsApp Number (Optional):" styleClass="field-label"/>
            <TextField fx:id="whatsappField" 
                      promptText="01XXXXXXXXX"
                      styleClass="input-field"/>
        </VBox>
        
        <!-- Parent Phone -->
        <VBox spacing="5.0">
            <Label text="Parent Phone Number:" styleClass="field-label"/>
            <TextField fx:id="parentPhoneField" 
                      promptText="01XXXXXXXXX"
                      styleClass="input-field"/>
            <Label fx:id="parentPhoneErrorLabel" 
                  styleClass="error-label" 
                  visible="false" 
                  managed="false"/>
        </VBox>
        
        <!-- Parent WhatsApp (Optional) -->
        <VBox spacing="5.0">
            <Label text="Parent WhatsApp (Optional):" styleClass="field-label"/>
            <TextField fx:id="parentWhatsappField" 
                      promptText="01XXXXXXXXX"
                      styleClass="input-field"/>
        </VBox>
    </VBox>
    
    <Separator/>
    
    <!-- Buttons -->
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" 
               text="Cancel" 
               onAction="#handleCancel"
               prefWidth="100.0"
               styleClass="secondary-button"/>
        
        <Button fx:id="saveButton" 
               text="Save Changes" 
               onAction="#handleSave"
               prefWidth="130.0"
               styleClass="primary-button"/>
    </HBox>
</VBox>

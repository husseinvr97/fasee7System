<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.studenttracker.controller.student.StudentRegistrationController"
      spacing="15.0" styleClass="registration-form"
      prefWidth="500.0">
    
    <padding>
        <Insets top="20.0" right="30.0" bottom="20.0" left="30.0"/>
    </padding>
    
    <!-- Title -->
    <Label text="Register New Student" styleClass="form-title">
        <font><Font name="System Bold" size="20.0"/></font>
    </Label>
    
    <Separator/>
    
    <!-- Form Fields -->
    <VBox spacing="15.0">
        
        <!-- Student ID (auto-generated, read-only) -->
        <VBox spacing="5.0">
            <Label text="Student ID:" styleClass="field-label"/>
            <TextField fx:id="studentIdField" 
                      editable="false" 
                      promptText="Auto-generated"
                      styleClass="readonly-field"/>
        </VBox>
        
        <!-- Full Name -->
        <VBox spacing="5.0">
            <HBox spacing="5.0">
                <Label text="Full Name (الاسم الرباعي):" styleClass="field-label"/>
                <Label text="*" styleClass="required-marker"/>
            </HBox>
            <TextField fx:id="fullNameField" 
                      promptText="e.g., محمد أحمد علي حسن"
                      styleClass="input-field"/>
            <Label fx:id="nameErrorLabel" 
                  styleClass="error-label" 
                  visible="false" 
                  managed="false"/>
        </VBox>
        
        <!-- Phone Number -->
        <VBox spacing="5.0">
            <HBox spacing="5.0">
                <Label text="Phone Number:" styleClass="field-label"/>
                <Label text="*" styleClass="required-marker"/>
            </HBox>
            <TextField fx:id="phoneField" 
                      promptText="01XXXXXXXXX (11 digits)"
                      styleClass="input-field"/>
            <Label fx:id="phoneErrorLabel" 
                  styleClass="error-label" 
                  visible="false" 
                  managed="false"/>
        </VBox>
        
        <!-- WhatsApp Number (Optional) -->
        <VBox spacing="5.0">
            <Label text="WhatsApp Number (Optional):" styleClass="field-label"/>
            <TextField fx:id="whatsappField" 
                      promptText="01XXXXXXXXX (11 digits)"
                      styleClass="input-field"/>
        </VBox>
        
        <!-- Parent Phone -->
        <VBox spacing="5.0">
            <HBox spacing="5.0">
                <Label text="Parent Phone Number:" styleClass="field-label"/>
                <Label text="*" styleClass="required-marker"/>
            </HBox>
            <TextField fx:id="parentPhoneField" 
                      promptText="01XXXXXXXXX (11 digits)"
                      styleClass="input-field"/>
            <Label fx:id="parentPhoneErrorLabel" 
                  styleClass="error-label" 
                  visible="false" 
                  managed="false"/>
        </VBox>
        
        <!-- Parent WhatsApp (Optional) -->
        <VBox spacing="5.0">
            <Label text="Parent WhatsApp (Optional):" styleClass="field-label"/>
            <TextField fx:id="parentWhatsappField" 
                      promptText="01XXXXXXXXX (11 digits)"
                      styleClass="input-field"/>
        </VBox>
        
        <!-- Registration Date -->
        <VBox spacing="5.0">
            <Label text="Registration Date:" styleClass="field-label"/>
            <DatePicker fx:id="registrationDatePicker" 
                       prefWidth="200.0"
                       styleClass="input-field"/>
        </VBox>
    </VBox>
    
    <Separator/>
    
    <!-- Buttons -->
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" 
               text="Cancel" 
               onAction="#handleCancel"
               prefWidth="100.0"
               styleClass="secondary-button"/>
        
        <Button fx:id="saveButton" 
               text="Register Student" 
               onAction="#handleSave"
               prefWidth="150.0"
               styleClass="primary-button"/>
    </HBox>
</VBox>
